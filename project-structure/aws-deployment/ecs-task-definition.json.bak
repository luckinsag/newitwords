{
  "family": "itwords-learning-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::628532653086:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::628532653086:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "itwords-backend",
      "image": "628532653086.dkr.ecr.us-east-1.amazonaws.com/itwords-backend:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "docker"
        },
        {
          "name": "DB_URL",
          "value": "jdbc:mysql://YOUR_RDS_ENDPOINT:3306/mysql_itwordslearning?allowPublicKeyRetrieval=true&useSSL=true&serverTimezone=UTC"
        }
      ],
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:628532653086:secret:itwords-db-credentials:username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:628532653086:secret:itwords-db-credentials:password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/itwords-learning-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    },
    {
      "name": "itwords-frontend",
      "image": "628532653086.dkr.ecr.us-east-1.amazonaws.com/itwords-frontend:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "BACKEND_URL",
          "value": "http://localhost:8080"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/itwords-learning-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "frontend"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 30
      },
      "essential": true,
      "dependsOn": [
        {
          "containerName": "itwords-backend",
          "condition": "HEALTHY"
        }
      ]
    }
  ]
} 